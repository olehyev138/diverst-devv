$domain: "<%= ENV["DOMAIN"] %>";

// Primary colors

$diverst-grey: #68727A;
$diverst-grey-light: #8A8A8A;
$primary-color: <%= theme.branding_color %>;
$inverted-primary: <%= ColorCode.inverted_primary %>;
$inverted-primary-hover: <%= ColorCode.inverted_darken %>;
$diverst-black: #333;
$diverst-grey-lightest: #C5C9D0;
$diverst-red: #ec4848;

$diverst-border: #E1E2E3;

$diverst-background: #EBECED;

$diverst-white: #fff;
$diverst-yellow: #E7D335;

$red: #f15e57;
$green: #67C35D;


// Animations

$time: 0.1s;
$time-longer: 0.3s;

$curve: ease-in-out;
$curve-bounce: cubic-bezier(0.155, 0.960, 0.560, 1.315);


// Measurements

$border-radius: 4px;

$spacing-small: 8px;
$spacing-medium: $spacing-small * 2;
$spacing-large: $spacing-small * 3;
$spacing-x-large: $spacing-small * 4;

$nav-width: 240px;


// Media queries

$small: 480px;
$medium: 816px;
$large: 1096px;
$x-large: 1320px;