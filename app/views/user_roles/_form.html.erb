<div class="content__main">
  <%= simple_form_for @user_role do |f| %>
    <div class="card">
      <div class="card__section card__section--border">
        <p class="field__hint">
          <%= f.input :role_name, input_html: { autofocus: true } %>
        </p>
        <%= f.input :role_type, :collection => UserRole.role_types, :include_blank => false %>
      </div>
      <div class="card__section card__section--border">
        <%= f.button :submit %>        
      </div>
    </div>
  <% end %>
</div>