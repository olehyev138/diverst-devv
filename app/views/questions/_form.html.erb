<div class="content__main">
  <%= simple_form_for [@campaign, @question] do |f| %>
    <div class="card">
      <div class="card__section card__section--border">
        <p class="field__hint">Start by giving a <strong>title</strong> to your question</p>
        <%= f.input :title, label: false, placeholder: "What do you think of our new strategy for... ?" %>
      </div>
      <div class="card__section card__section--border">
        <p class="field__hint">Optionnally define a <strong>description</strong> to further explain what you need resolution for</p>
        <%= f.input :description, label: false, placeholder: "We've been hammering at this problem for a very long time, and we need your input on how to..." %>
      </div>
    </div>
    <%= f.button :submit %>
  <% end %>
</div>