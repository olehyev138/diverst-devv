<div class="content__header">
  <h1>
    <%= link_to "Campaigns", campaigns_path %> /
    <%= link_to @question.campaign.title, campaign_questions_path(@question.campaign) %> /
    <%= @question.title.truncate(60) %>
  </h1>
</div>

<div class="content__main">

   <% if !@question.solved_at.nil? %>
    <div class="card">
      <div class="card__section card__section--border">
        <h3>This question was marked as solved <%= time_ago_in_words @question.solved_at %> ago</h3>
        <p><%= @question.conclusion %></p>
        <% if policy(@question.campaign).edit? %>
          <%= simple_form_for @question, url: reopen_question_path(@question) do |f| %>
            <div class="flex-row">
              <div class="flex-row__cell">
                <%= f.button :submit, value: "Reopen" %>
              </div>
              <div class="flex-row__cell">
                <%= link_to "Specify ROI", edit_question_roi_path(@question), class: "btn btn--secondary" %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="card">
    <div class="card__section card__section--border">
      <h3><span class="accent">Q:</span> <%= @question.title %></h3>
      <p><%= @question.description %></p>
      <div class="flex-row flex-row--middle">
        <small class="flex-row__cell">Submitted <%= time_ago_in_words(@question.created_at) %> ago</small>
        <small class="flex-row__cell highlight"><%= pluralize(@answers.count, 'answer') %> </small>
      </div>
    </div>

    <% @answers.each do |answer| %>
      <div class="card__section card__section--border">
        <div class="flex-row">
          <div class="flex-row__cell text-center">
            <div class="counter<%= answer.voters.exists?(id: current_user.id) ? " counter--active" : "" %>" data-answer-id="<%= answer.id %>" data-upvoted="<%= answer.voters.exists?(id: current_user.id) %>">
              <span class="counter__number"><%= answer.upvote_count %></span>
            </div>
            <div class="chosen">
              <a href="#" class="star-button" data-answer-id="<%= answer.id %>" data-starred="<%= answer.chosen %>" title="Star this answer"><%= inline_svg('icons/star-purple.svg', class: "icon-inline#{ answer.chosen ? ' icon-inline--yellow' : '' }") %></span></a>
            </div>
          </div>

          <div class="answer" style="width: 100%;">
            <div class="answer__metadata">
              <span class="highlight"><%= answer.author.name %></span>
              <span class="muted"><%= time_ago_in_words(answer.created_at) %> ago</span>
              <div class="fright">
                <% if answer.value %>Estimated <%= number_to_currency(answer.value, precision: 0) %> in <%= answer.benefit_type == 0 ? "revenue" : "cost savings" %><% end %>
                <% if answer.supporting_document %> (<%= link_to "documentation", answer.supporting_document.url %>)<% end %>
              </div>
            </div>
            <div class="answer__content">
              <% if answer.outcome %>
                <strong>Plausible business outcome:</strong>
                <p style="font-style: italic;" class="accent"><%= answer.outcome %></p>
              <% end %>

              <p><%= answer.content %></p>

              <% answer.comments.each do |comment| %>
                <div class="comment">
                  <p>
                    <%= comment.content %> &mdash;
                    <span class="accent"><%= comment.author.name %></span>
                    <span class="muted"><%= time_ago_in_words(comment.created_at) %> ago</span> &mdash;
                    <%= link_to "Delete", answer_comment_path(comment), method: :delete, class: 'error', data: { confirm: "Are you sure?" } %>
                  </p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @question.solved_at.nil? %>
    <%= simple_form_for @question do |f| %>
      <div class="card">
        <div class="card__section card__section--border">
          <h3>Mark this question as solved</h3>
          <p class="field__hint">Mark this question as solved by explaining what the outcome of the discsussion has been. This will block further communications on this question.</p>
          <%= f.input :conclusion, label: false, placeholder: "We have decided to do..." %>
          <%= f.button :submit, value: "Close question" %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<script>
  $('.star-button').click(function(e) {
    var answerId = $(this).data('answer-id');
    var isStarred = !$(this).data('starred');

    $.ajax({
      url: '/answers/' + answerId + '.json',
      method: 'put',
      data: {
        answer: {
          chosen: isStarred
        }
      }
    });

    $(this).data('starred', !$(this).data('starred'));
    $(this).children('svg').attr('class', 'icon-inline' + (isStarred ? ' icon-inline--yellow' : ''));

    e.preventDefault();
    return false;
  });
</script>