<div class="content__header">
  <h1>
    <%= link_to "Campaigns", campaigns_path %> /
    <%= @campaign.title %>
  </h1>
  <%= link_to "New Question", new_campaign_question_path(@campaign), class: "btn btn--primary" if policy(@campaign).edit? %>
</div>

<div class="content__main">

  <div class="row row--equal-height">
    <div class="col sm-12 md-6">
      <div class="card">
        <div class="card__section">
          <h3>Contributions per ERG</h3>
          <div class="graph" data-graph-id="contributions_per_erg"></div>
        </div>
      </div>
    </div>
    <div class="col sm-12 md-6">
      <div class="card">
        <div class="card__section">
          <h3>Top performers</h3>
          <div class="graph" data-graph-id="top_performers"></div>
        </div>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card__section">
      <h3>Questions</h3>
      <% if @questions.empty? %>
        <p>There are no questions in this campaign yet. <%= link_to "Create one", new_campaign_question_path(@campaign) %> and start leveraging your team's diverse opinions to solve problems.</p>
      <% else %>
        <table class="table--has-border">
          <thead>
            <th>Title</th>
            <th># of answers</th>
            <th>Creation date</th>
            <th>Last activity</th>
            <th>Solved?</th>
            <% if policy(@campaign).edit? %>
              <th>Options</th>
            <% end %>
          </thead>
          <tbody>
            <% @questions.each do |question| %>
              <tr>
                <td><%= link_to question.title, question_path(question) %></td>
                <td><%= question.answers.count %></td>
                <td><%= question.created_at.to_s :dateonly %></td>
                <td><%= question.answers.order(created_at: :desc).first ? question.answers.order(created_at: :desc).first.created_at.to_s(:dateonly) : "None yet" %></td>
                <td><%= question.solved_at.nil? ? "No" : "Yes" %></td>
                <td>
                  <% if policy(@campaign).edit? %>
                    <%= link_to "Edit", edit_question_path(question) %> - <%= link_to "Delete", question_path(question), method: :delete, class: "error", data: { confirm: "Are you sure?" } %></td>
                  <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>

</div>

<script>
  $(document).on('page:change', function() {
    $(document).off('page:change');

    var graphs = $('.graph').map(function() {
      return new Graph('/campaigns/<%= @campaign.id %>/' + $(this).data('graph-id'), $(this));
    });
  });
</script>