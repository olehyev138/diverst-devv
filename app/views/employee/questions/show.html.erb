<div class="content__header">
  <h1>
    <%= link_to "My Campaigns", employee_campaigns_path %> /
    <%= link_to @question.campaign.title, employee_campaign_questions_path(@question.campaign) %> /
    <%= @question.title.truncate(60) %>
  </h1>
</div>

<div class="content__main">

  <% if !@question.solved_at.nil? %>
    <div class="card">
      <div class="card__section card__section--border">
        <h3>This question was marked as solved <%= time_ago_in_words @question.solved_at %> ago</h3>
        <p><%= @question.conclusion %></p>
      </div>
    </div>
  <% end %>

  <div class="card">
    <div class="card__section card__section--border">
      <h3><span class="accent">Q:</span> <%= @question.title %></h3>
      <p><%= @question.description %></p>
      <div class="flex-row flex-row--middle">
        <small class="flex-row__cell">Submitted <%= time_ago_in_words(@question.created_at) %> ago</small>
        <small class="flex-row__cell highlight"><%= pluralize(@question.answers.count, 'answers') %> </small>
      </div>
    </div>
    <% @question.answers.order(created_at: :desc).each do |answer| %>
      <div class="card__section card__section--border">
        <div class="flex-row">
          <div class="flex-row__cell text-center">
            <div class="counter<%= answer.votes.include?(current_employee) ? " counter--active" : "" %>" data-answer-id="<%= answer.id %>" data-upvoted="<%= answer.votes.include? current_employee %>">
              <% if answer.author != current_employee %><span class="icon icon--upvote counter__arrow"></span><% end %>
              <span class="counter__number"><%= answer.votes.count %></span>
            </div>

            <% if answer.chosen %>
              <div class="chosen">
                <%= inline_svg('icons/star-purple.svg', class: "icon-inline#{ answer.chosen ? ' icon-inline--colored' : '' }", title: "This answer was starred by an admin.") %>
              </div>
            <% end %>
          </div>

          <div class="flex-row__cell flex-row__cell--grow">
            <div class="flex-row flex-row--middle">
              <div class="flex-row__cell">
                <span class="highlight"><%= answer.author.name %></span>
                <span class="muted"><%= time_ago_in_words(answer.created_at) %> ago</span>
              </div>
            </div>
            <div class="flex-row answer__container">
              <div class="flex-row__cell">
                <p><%= answer.content %></p>

                <% answer.comments.each do |comment| %>
                  <div class="flex-row">
                    <div class="flex-row__cell">
                      <div style="visibility: hidden;" class="counter<%= answer.votes.include?(current_employee) ? " counter--active" : "" %>" data-answer-id="<%= answer.id %>" data-upvoted="<%= answer.votes.include? current_employee %>"></div>
                    </div>

                    <div class="flex-row__cell flex-row__cell--grow" style="margin-bottom: 30px;">
                      <div class="flex-row flex-row--middle">
                        <div class="flex-row__cell">
                          <span class="highlight"><%= comment.author.name %></span>
                          <span class="muted"><%= time_ago_in_words(comment.created_at) %> ago</span>
                        </div>
                      </div>
                      <div class="flex-row answer__container">
                        <div class="flex-row__cell">
                          <p><%= comment.content %></p>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>

                <%= simple_form_for [:employee, answer, answer.comments.new] do |f| %>
                  <%= f.input :content, label: false, placeholder: "Enter a comment...", input_html: { rows: 2, class: "submit-on-return", style: "margin-left: 33px; width: 1030px; min-height: auto;" } %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="card">
    <div class="card__section">
    <h3>Write an answer</h3>
    <% if @question.solved_at.nil? %>
      <%= simple_form_for [:employee, @campaign, @question, @question.answers.new] do |f| %>
        <%= f.input :content, label: false, placeholder: "Type an answer here..." %>
        <%= f.button :submit, value: "Submit" %>
      <% end %>
    <% else %>
      <p>This question is closed and doesn't take additional answers.</p>
    <% end %>
  </div>
</div>

<script>
  $('.counter').click(function() {
    $.ajax({
      method: 'put',
      url: '/employee/answers/' + $(this).data('answer-id') + '/vote',
      data: {
        answer: {
          upvoted: !$(this).data('upvoted')
        }
      }
    });

    var voteChange = ($(this).data('upvoted') ? -1 : 1);
    $(this).find('.counter__number').text(parseInt($(this).find('.counter__number').text()) + voteChange);

    $(this).data('upvoted', !$(this).data('upvoted'));
    $(this).toggleClass('counter--active');
  });

  // Preload arrow images
  var image = new Image(); image.src = "<%= image_path('icons/upvote.svg') %>";
  var image2 = new Image(); image2.src = "<%= image_path('icons/upvote-active.svg') %>";

  // Submit comments using the return key
  Utility.submitOnReturn($('.submit-on-return'));
</script>