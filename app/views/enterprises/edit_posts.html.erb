<div class="content__header">
  <h1>Posts</h1>
</div>

<div class="content__main">
  <div class="card">
    <div class="card__section">
      <%= simple_form_for @enterprise, :url => update_posts_enterprise_path(@enterprise) do |f| %>
        <%= f.hidden_field :enable_pending_comments, value: 0 %>
        <%= f.input :enable_pending_comments, id: 'enable_pending_comments', label: 'Enable Pending Comments' %>
        <%= f.hidden_field :enable_social_media, value: 0 %>
        <%= f.input :enable_social_media, id: 'enable_social_media', label: 'Enable Social Media Posts' %>
        <%= f.button :submit, "Save" %>
      <% end %>
    </div>
  </div>
</div>
