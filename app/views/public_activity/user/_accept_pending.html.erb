<div class="card__section">
  <%= render 'public_activity/shared/owner', activity: activity %>
  <% if activity.trackable %>
  approved pending member(<%= render 'public_activity/shared/user', activity: activity %>) for <%= link_to activity.parameters[:group][:name], group_path(activity.parameters[:group]) %>
  (<%= activity.created_at.to_s :datetime %>)
  <% else %>
  Deleted User (<%= activity.created_at.to_s :datetime %>)
  <% end %>
</div>