<div class="card__section">
  <%= render 'public_activity/shared/owner', activity: activity %>
  updated question
  <% if activity.trackable %>
    <%= link_to activity.trackable.title, question_path(activity.trackable) %>
    <% if activity.trackable.campaign %>
       for campaign
      <%= link_to activity.trackable.campaign.title, campaign_path(activity.trackable.campaign) %>
    <% end %>
  <% else %>
    which has since been removed
  <% end %>
  (<%= activity.created_at.to_s :datetime %>)
</div>
