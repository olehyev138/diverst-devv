<div class="card__section">
  <%= render 'public_activity/shared/owner', activity: activity %>
  created
  <% if activity.trackable %>
    <%= link_to "group update for " + activity.trackable.group.name, group_update_path(activity.trackable.group, activity.trackable) %>
  <% else %>
    group update which has since been removed
  <% end %>
  (<%= activity.created_at.to_s :datetime %>)
</div>
