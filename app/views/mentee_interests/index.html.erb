<div class="content__header">
  <h1>Mentee Topics</h1>
      <div class="flex-row__cell">
      <%= link_to "Create Topic", new_mentee_interest_path, class: "btn btn--primary pull-right hidden-xs" if MentoringInterestPolicy.new(current_user, MentoringInterest).new? %>
      <%= link_to "Create Topic", new_mentee_interest_path, class: "btn btn-primary visible-xs" if MentoringInterestPolicy.new(current_user, MentoringInterest).new? %>
    </div>
</div>

<div class="content__main">
  <div class="card">
    <div class="card__section">
      <table class="table--has-border" id="policy-groups-templates-table">
        <thead>
          <th>Name</th>
          <th></th>
        </thead>
        <tbody>
          <% @topics.each do |topic| %>
            <tr>
              <td><%= link_to topic.name, edit_mentee_interest_path(topic) %></td>
              <td><td><%= link_to "Delete", mentee_interest_path(topic), method: :delete, class: "error", data: { confirm: "Are you sure?" } %></td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>