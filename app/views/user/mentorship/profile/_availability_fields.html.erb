<div class="nested-fields">
  <%= link_to_remove_association "Remove", f, class: "error" %>
    x
  </br>
  
  <div class="row">
    
    <div class="form-group">
      <%= f.input :day, as: :select, collection: ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"], label: "Day of the week", input_html: {} %>
    </div>
    
    <%= f.input :start, label: "Start time", input_html: { class: "timepicker1" } %>
    
    <%= f.input :end, label: "End time", input_html: { class: "timepicker2" } %>
    
  </div>
</div>

<script type="text/javascript">
    $('.timepicker1').timepicker();
    $('.timepicker2').timepicker();
</script>