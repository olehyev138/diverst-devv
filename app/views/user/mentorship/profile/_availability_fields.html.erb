<div class="nested-fields">
  <%= link_to_remove_association "Remove", f, class: "error" %>
    x
  </br>
  
  <div class="row">
    
    <div class="col-xs-4">
      <p class="field__hint">Day of the week</p>
      <%= f.input :day, as: :select, collection: Date::DAYNAMES, label: false, input_html: {} %>
    </div>
    
    <div class="col-xs-4">
      <p class="field__hint">Start time</p>
      <%= f.input :start, label: false, input_html: { class: "timepicker1" } %>
    </div>
    
    <div class="col-xs-4">
      <p class="field__hint">End time</p>
      <%= f.input :end, label: false, input_html: { class: "timepicker2" } %>
    </div>
    
  </div>
</div>

<script type="text/javascript">
    $('.timepicker1').timepicker();
    $('.timepicker2').timepicker();
</script>