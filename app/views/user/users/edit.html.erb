<div class="content__header">
  <h1>Edit user</h1>
</div>

<div class="content__main">
  <div class="card">
    <div class="card__section">
      <%= simple_form_for @user, url: user_user_path(@user) do |f| %>
        <%= render "users/form", f: f %>
        <%= f.button :submit, "Save" %>
      <% end %>
    </div>
  </div>
</div>
