<div class="card__section card__section--border">
  <div class="block block-section">
    <div class="flex-row flex-row--middle">
      <% if event.virtual? %>
        <% if event.ongoing? %>
          <%= inline_svg('icons/live-streaming.svg', size: '20px*20px', class: 'live__streaming') %>
        <% elsif event.upcoming? %>
          <%= inline_svg('icons/live-streaming.svg', size: '20px*20px', class: 'scheduled__streaming') %>
        <% end %>
        <%= image_tag("Remote meeting icon.png", size: "20x20") %>
      <% end %>
      <% if event.picture.exists? %>
        <div class="flex-row__cell">
          <div style="background-image: url(<%= event.picture.expiring_url(3600) %>); width: 100px; height: 85px; background-size: cover; background-position: center;"></div>
        </div>
      <% end %>
      <div class="flex-row__cell flex-row__cell--grow">
        <%= inline_svg('icons/brand.svg', size: '20px*20px', class: 'play__back') if event.virtual? && event.past? %>
        <span class="highlight"><%= link_to event.name + " - " + event.owner_group.name, group_event_path(event.pillar.outcome.group, event) %></span><br>
        <small style="padding-left: 12px;"><%= sanitize event.description %></small><br>
        <small class="muted"><%= event.start.to_s :slashes %></small>
      </div>
      <div class="flex-row__cell">
        <span class="icon icon--chevron-right"></span>
      </div>
    </div>
  </div>
</div>
