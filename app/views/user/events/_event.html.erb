<div class="card__section card__section--border">
  <%= link_to group_event_path(event.group, event), class: "block block-section" do %>
    <div class="flex-row flex-row--middle">
      <% if event.picture.exists? %>
        <div class="flex-row__cell">
          <div style="background-image: url(<%= event.picture.expiring_url(3600) %>); width: 100px; height: 85px; background-size: cover; background-position: center;"></div>
        </div>
      <% end %>
      <div class="flex-row__cell flex-row__cell--grow">
        <span class="highlight"><%= event.title %> - <%= event.group.name %></span><br>
        <small><%= event.description %></small><br>
        <small class="muted"><%= event.start.to_s :slashes %></small>
      </div>
      <div class="flex-row__cell">
        <span class="icon icon--chevron-right"></span>
      </div>
    </div>
  <% end %>
</div>