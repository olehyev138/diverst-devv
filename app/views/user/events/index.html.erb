<div class="content__header">
  <h1>Events</h1>
  <div class="flex-row flex-row--middle">
    <div class="flex-row__cell">
      <%= link_to "Calendar view",   calendar_user_events_path, class: "btn btn--secondary" %>
    </div>
  </div>
</div>

<div class="content__main">
  <% unless @ongoing_events.empty? %>
    <h3>Ongoing events for your <%= c_t(:erg).pluralize %></h3>
    <div class="card">
      <% @ongoing_events.each do |event| %>
        <%= render 'event', event: event %>
      <% end %>
    </div>
  <% end %>

  <h3>Upcoming events for your <%= c_t(:erg).pluralize %></h3>
  <div class="card">
    <% if @upcoming_events.empty? %>
      <div class="card__section">
        <p>There are no upcoming events scheduled at this time.</p>
      </div>
    <% else %>
      <% @upcoming_events.each do |event| %>
        <%= render 'event', event: event %>
      <% end %>
    <% end %>
  </div>

  <h3>Past events for your <%= c_t(:erg).pluralize %></h3>
  <div class="card">
    <% if @past_events.empty? %>
      <div class="card__section">
        <p>There are no past events.</p>
      </div>
    <% else %>
      <% @past_events.each do |event| %>
        <%= render 'event', event: event %>
      <% end %>
    <% end %>
  </div>

</div>
