<div class="content__header">
  <h1>Diversity Culture Index (DCI)</h1>
</div>

<div class="content__main">

  <div class="row row--equal-height">

    <div class="col sm-12 md-6">
      <div class="card">
        <div class="card__section">

          <h4>My points: 1,275</h4>

          <table class="table--has-border" id="campaigns-table">
            <thead>
              <th>Achievement</th>
              <th>Points</th>
            </thead>
            <tbody>
              <% @reward_actions.each do |reward_action| %>
                <tr><td><%= reward_action.label %></td><td><%= reward_action.points.to_i %></td></tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="col sm-12 md-6">
      <div class="card">
        <div class="card__section">

          <h4><span class="icon icon--large" style="margin-bottom: 5px;"><%= image_tag('linkedin.png') %></span>Rewards</h4>

          <table class="table--has-border" id="campaigns-table">
            <thead>
              <th>Reward</th>
              <th>Cost</th>
              <th>Redeem?</th>
            </thead>
            <tbody>
              <tr><td><%= image_tag 'linkedin-full.png', style: "height: 24px; display: inline-block;" %> recommendation</td><td>500</td><td><label class="control"><input type="checkbox" class="control__input"><span class="control__indicator control__indicator--checkbox"></span></label></td></tr>
              <tr><td><%= image_tag 'linkedin-full.png', style: "height: 24px; display: inline-block;" %> fast track</td><td>2,000</td><td><label class="control"><input type="checkbox" class="control__input"><span class="control__indicator control__indicator--checkbox"></span></label></td></tr>
              <tr><td><%= image_tag 'linkedin-full.png', style: "height: 24px; display: inline-block;" %> advancement</td><td>2,000</td><td><label class="control"><input type="checkbox" class="control__input"><span class="control__indicator control__indicator--checkbox"></span></label></td></tr>
              <tr><td><%= image_tag 'linkedin-full.png', style: "height: 24px; display: inline-block;" %> executive mentorship</td><td>3,000</td><td><label class="control"><input type="checkbox" class="control__input"><span class="control__indicator control__indicator--checkbox"></span></label></td></tr>
            </tbody>
          </table>

          <a href="#" class="btn btn--primary" style="margin-top: 30px;">Redeem</a>

        </div>
      </div>
    </div>

  </div>

  <div class="card">
    <div class="card__section">
      <h3>Catalogue</h3>

      <% @rewards.each_slice(3) do |rewards_batch| %>
        <div class="row row--spacing-bottom">
          <% rewards_batch.each do |reward| %>
            <div class="col sm-4">
              <div class="flex-row">
                <div class="flex-row__cell">
                  <%= image_tag reward.picture.url, style: "width: 120px;" %>
                </div>
                <div class="flex-row__cell">
                  <h4><%= reward.label %></h4>
                  <p>
                    <%= reward.points %> points
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>

    </div>
  </div>
</div>
