<div class="content__main">
  <%= simple_form_for @reward do |f| %>

    <div class="card">
      <div class="card__section card__section--border">
        <%= f.input :label,
              input_html: { autofocus: true },
              label: "Choose a <strong>name</strong> that best describes the prize.".html_safe %>
      </div>

      <div class="card__section card__section--border">
        <%= f.input :points,
              label: "How many <strong>points</strong> are needed to redeem the prize?".html_safe %>
      </div>

      <div class="card__section card__section--border">
        <%= f.association :responsible,
              include_blank: true,
              input_html: { class: "select2" },
              label: "Who is <strong>responsible</strong> for checking this prize request?".html_safe %>
      </div>

      <div class="card__section card__section--border">
        <%= f.input :picture,
              as: :attachment_preview,
              label: "Choose a <strong>picture</strong> that best describes the prize.".html_safe %>
      </div>

      <div class="card__section card__section--border">
        <%= f.input :description %>
      </div>
    </div>

    <%= f.button :submit, "Save prize" %>
  <% end %>
</div>
