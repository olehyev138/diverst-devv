<div class="content__header">
  <h1>General metrics</h1>
</div>

<div class="content__main">

  <div class="card">
    <div class="card__section">
      <div class="flex-row">
        <div class="flex-row__cell">
          <small>Users</small><br>
          <strong><%= @general_metrics[:nb_users] %></strong>
        </div>
        <div class="flex-row__cell">
          <small>ERGs</small><br>
          <strong><%= @general_metrics[:nb_ergs] %></strong>
        </div>
        <div class="flex-row__cell">
          <small>Segments</small><br>
          <strong><%= @general_metrics[:nb_segments] %></strong>
        </div>
        <div class="flex-row__cell">
          <small>Resources</small><br>
          <strong><%= @general_metrics[:nb_resources] %></strong>
        </div>
        <div class="flex-row__cell">
          <small>Surveys</small><br>
          <strong><%= @general_metrics[:nb_polls] %></strong>
        </div>
        <div class="flex-row__cell">
          <small>Ongoing campaigns</small><br>
          <strong><%= @general_metrics[:nb_ongoing_campaigns] %></strong>
        </div>
        <div class="flex-row__cell">
          <small>Average # of members per ERG</small><br>
          <strong><%= @general_metrics[:average_nb_members_per_group] %></strong>
        </div>
      </div>
    </div>
  </div>

  <div class="row row--equal-height">

    <div class="col sm-12 md-6">
      <div class="card">
        <div class="card__section">
          <h4>ERG population</h4>
          <div class="flex-row__cell right">
            <%= link_to "Export CSV", group_population_generic_graphs_path(format: :csv) %>
          </div>
          <div class="graph" data-graph-id="group_population"></div>
        </div>
      </div>
    </div>

    <div class="col sm-12 md-6">
      <div class="card">
        <div class="card__section">
          <h4>Segment population</h4>
          <div class="flex-row__cell right">
            <%= link_to "Export CSV", segment_population_generic_graphs_path(format: :csv) %>
          </div>
          <div class="graph" data-graph-id="segment_population"></div>
        </div>
      </div>
    </div>

    <div class="col sm-12 md-6">
      <div class="card">
        <div class="card__section">
          <h4>Events created in the last 30 days</h4>
          <div class="flex-row__cell right">
            <%= link_to "Export CSV", events_created_generic_graphs_path(format: :csv) %>
          </div>
          <div class="graph" data-graph-id="events_created"></div>
        </div>
      </div>
    </div>

    <div class="col sm-12 md-6">
      <div class="card">
        <div class="card__section">
          <h4>Messages sent in the last 30 days</h4>
          <div class="flex-row__cell right">
            <%= link_to "Export CSV", messages_sent_generic_graphs_path(format: :csv) %>
          </div>
          <div class="graph" data-graph-id="messages_sent"></div>
        </div>
      </div>
    </div>

    <div class="col sm-12 md-6">
      <div class="card">
        <div class="card__section">
          <h4># of employees over time</h4>
          <div id="users-date-histogram"></div>
        </div>
      </div>
    </div>

  </div>

</div>

<div class="content__header">
  <h1>Specific metrics dashboards</h1>
  <%= link_to "New dashboard", new_metrics_dashboard_path, class: "btn btn--primary" if policy(MetricsDashboard).new? %>
</div>

<div class="content__main">
  <div class="card">
    <div class="card__section">
      <% if @dashboards.empty? %>
        <p>There are no dashboards yet. <%= link_to "Create one", new_metrics_dashboard_path %> to start getting valuable insight on your team's diversity.</p>
      <% else %>
        <table class="table--has-border" id="users-table">
          <thead>
            <th>Title</th>
            <th># of graphs</th>
            <th># of targeted users</th>
            <th>Creation date</th>
            <th>Options</th>
          </thead>
          <tbody>
            <% @dashboards.each do |dashboard| %>
              <tr>
                <td><%= link_to dashboard.name, metrics_dashboard_path(dashboard) %></td>
                <td><%= dashboard.graphs.count %></td>
                <td><%= dashboard.target.count %></td>
                <td><%= dashboard.created_at.to_s :dateonly %></td>
                <td><%= link_to "Edit", edit_metrics_dashboard_path(dashboard) %> - <%= link_to "Delete", metrics_dashboard_path(dashboard), method: :delete, class: "error", data: { confirm: "Are you sure?" } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>

<script>
  var graphs = $('.graph').map(function() {
    return new Graph('/generic_graphs/' + $(this).data('graph-id'), $(this));
  });

  new DateHistogramGraph('/users/date_histogram', $('#users-date-histogram'))
</script>
