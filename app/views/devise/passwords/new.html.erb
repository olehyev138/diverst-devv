<h2 style="margin-left: 33%">Forgot your password?</h2>
<div class="col sm-12 md-5">
  <div class="card" style="left: 80%;">
    <div class="card__section">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.input :email, autofocus: true %>
        <%= f.button :submit, value: "Reset password" %>
      <% end %>

      <% content_for :links do %>
        <div class="text-center">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>  
  </div>  
</div>

<script>
  $(document).ready(function(){
    var primary_color = $('body').data('primary-color');
    if( primary_color ) {
      $('body').css('background', primary_color);
    }
  });
</script>
