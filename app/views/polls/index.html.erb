<div class="content__header">
  <h1>Surveys</h1>
  <%= link_to "New Survey", new_poll_path, class: "btn btn--primary" %>
</div>

<div class="content__main">
  <div class="card">
    <% @polls.each do |poll| %>
      <div class="card__section card__section--border">
        <div class="flex-row">
          <div class="flex-row__cell flex-row__cell--grow"><%= link_to "#{poll.title}", poll_path(poll), class: "accent" %> - <%= pluralize poll.fields.count, "question" %></div>
          <div class="flex-row__cell link-group">
            <%= link_to "Edit", edit_poll_path(poll), class: "muted" %>
            <%= link_to "Delete", poll_path(poll), method: :delete, class: "error" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>