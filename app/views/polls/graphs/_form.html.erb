<div class="content__main">
  <%= simple_form_for [@poll, @graph] do |f| %>
    <div class="card">
      <div class="card__section card__section--border">
        <p class="field__hint">Choose the field that the graph will represent</p>
        <%= f.association :field, label: false, collection: @poll.fields + current_user.enterprise.fields %>
      </div>

      <div class="card__section card__section--border">
        <p class="field__hint">Choose a field to aggregate the data on (optional)</p>
        <%= f.association :aggregation, label: false, collection: @poll.fields + current_user.enterprise.fields %>
      </div>
    </div>

    <%= f.button :submit %>
  <% end %>
</div>

<% content_for :page_scripts do %>
  <script>
    $('.select2').select2();
  </script>
<% end %>