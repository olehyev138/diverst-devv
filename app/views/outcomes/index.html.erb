<div class="content__header">
  <div class="flex-row flex-row--middle full-width">
    <div class="flex-row__cell">
      <div class="field__input-wrapper" style="width: 250px;">
        <span class="field__add-on field__add-on--right"><span class="icon icon--chevron-down"></span></span>
        <select class="field__input field__input--right-add-on" id="js-group-select">
          <% current_user.enterprise.groups.each do |group| %>
            <option value="<%= group.id %>"<%= " selected disabled" if group == @group %>><%= group.name %></option>
          <% end %>
        </select>
      </div>
    </div>
    <div class="flex-row__cell flex-row__cell--grow">
      <h1> / Planning structure</h1>
    </div>
  </div>
</div>

<div class="content__main">

  <div class="card">
    <div class="card__section">
      <p>This section allows you to edit the structrure of this ERG's plan. Add pillars and initiatives within each outcome to plan your diversity approach.</p>
    </div>
  </div>

  <%= simple_form_for @group do |f| %>

    <div id="outcomes">
      <%= f.simple_fields_for :outcomes do |o| %>
        <%= render "outcome_fields", f: o %>
      <% end %>
        <%= link_to_add_association "+Add outcome", f, :outcomes, class: "btn btn--secondary" %>
        <%= f.button :submit, value: "Update plan", class: "fright" %>
    </div>
  <% end %>
</div>

<script>
  $('#js-group-select').change(function() {
    location = "/groups/" + $(this).find(":selected").val() + '/outcomes';
  });
</script>