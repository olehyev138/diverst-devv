<div class="content__header">
  <h1>Budget details</h1>
</div>

<div class="content__main">
    <div class="card">
      <div class="card__section card__section--border">
        Edit and approve budget
      </div>
    </div>
  <%= simple_form_for @budget, url: group_budget_approve_path(@group, @budget), method: :post do |f| %>
    <div class="card">
      <div class="card__section">
        <%= f.input :description, input_html: { autofocus: true } %>
      </div>
    </div>
    <div class="card">
      <div class="card__section card__section--border">
        <p>You can specify list of <strong>events</strong> you plan to organize with this budget (optional).</p>
      </div>
      <div id="fields">
        <%= f.simple_fields_for :budget_items do |item_form| %>
          <%= render 'budgets/item', f: item_form %>
        <% end %>
      </div>

      <div class="link">
        <div class="card__section card__section--border">
          <%= link_to_add_association "+Add Event", f, :budget_items, partial: 'budgets/item' %>
        </div>
      </div>
    </div>
    <% if @budget.is_approved == false %>
    <div class="card">
      <div class="card__section card__section--border">
        <strong>Reason why this request was declined</strong><br />
        <div class="border-accent" style="margin-top: 8px;">
          <% if @budget.decline_reason.blank? %>
          No Reason Provided
          <% else %>
          <i><%= @budget.decline_reason %></i>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
    <% if @budget.is_approved.nil? %>
    <div class="row">
      <% if policy(@budget).approve? %>
        <div class="col">
          <%= f.button :submit, 'Approve Budget' %>
        </div>
        <% #bTODO check if vulnerabilities %>
      <% end %>
      <% if policy(@budget).decline? %>
        <div class="col form-inline">
          <div class="hidden" id="decline_reason_input_wrapper" style="position: relative">
            <%= f.input :decline_reason, label: 'Reason (optional)', input_html: { id: 'decline_reason_input', class: 'form-control', width: '250px' } %>
            <button type="button" class="close" aria-label="Close" onclick="closeReason()" style="position: absolute; right: 0; top: 0;">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        </div>
        <div class="col btn-padding" id="decline_wrapper">
          <button type="button" class="accent" id="decline_button" onclick='declineClicked()'>Decline Budget</button>
        </div>
      <% end %>
    </div>
    <% end %>
    </div>
  <% end %>
</div>

<script>
var verify = false;

function declineClicked()
{
  if (!verify) {
    verify = true;
    $('#decline_reason_input_wrapper').removeClass('hidden');
    $('#decline_button').addClass('btn btn--danger');
    $('#decline_wrapper').removeClass('btn-padding');
    $('#decline_reason_input').focus();
  } else {
    declineBudget();
  }
}

function closeReason()
{
  if (verify) {
    verify = false;
    $('#decline_reason_input_wrapper').addClass('hidden');
    $('#decline_button').removeClass('btn btn--danger');
    $('#decline_wrapper').addClass('btn-padding');
  }
}

function declineBudget()
{
  $.ajax({
    type: 'POST',
    url: "<%= group_budget_decline_path(@group.id, @budget.id) %>",
    data: { decline_reason: $('#decline_reason_input').val() }
  }).done(function() {
    window.location.href = "<%= group_budget_path(@group.id, @budget.id) %>";
  });
}
</script>
