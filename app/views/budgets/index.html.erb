<div class="content__header">
  <h1><%= @group.name%> budgets</h1>
  <div class="flex-row">
    <div class="flex-row__cell">
      <%= link_to "Export CSV", export_csv_group_budgets_path, class: "btn btn--secondary hidden-xs", role: "button", 'aria-label': "Export CSV"  if policy(@group).request_budget? %>
    </div>
    <div class="flex-row__cell">
      <%= link_to "New Budget Request", new_group_budget_path(@group), class: "btn btn--primary" if policy(@group).request_budget? %>
    </div>
  </div>
</div>

<div class="content__main">
  <div class="card">
    <div class="card__section">
      <% if @budgets.any? %>
        <table class="table--has-border">
          <thead>
            <th>Requested amount</th>
            <th>Available amount</th>
            <th>Status</th>
            <th>Requested at</th>
            <th># of events</th>
            <th>Description</th>
            <th></th>
          </thead>
          <tbody>
            <% @budgets.each do |budget| %>
              <tr>
                <td>
                  <%= number_to_currency budget.requested_amount %>
                </td>
                <td>
                  <%= number_to_currency(budget.available_amount) %>
                </td>
                <td><%= budget.status_title + " by " + approver_name(budget) %></td>
                <td><%= budget.created_at.to_s :reversed_slashes %></td>
                <td><%= budget.budget_items.count %></td>
                <td><%= budget.description %></td>
                <th><%= link_to 'Details', group_budget_path(@group, budget) %></th>
                <th><%= link_to "Delete", group_budget_path(@group, budget), method: :delete, class: 'error', data: { confirm: "Are you sure?" } %></th>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>No budgets have been created yet.</p>
      <% end %>
    </div>
  </div>
</div>
