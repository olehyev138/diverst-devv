<div class="nested-fields space-bottom segment-rule group-rule">
  <div class="flex-row flex-row--baseline">
    <div class="flex-row__cell">
      <%= link_to_remove_association f do %>
        <%= inline_svg('icons/remove.svg', class: "icon") %>
      <% end %>
    </div>
    <div class="flex-row__cell">
      <button type="button" id="choose-groups-btn" class="btn btn--primary btn--small" data-toggle="modal"
              data-target="#group-scope-selector">Select <%= c_t(:erg).pluralize.capitalize %></button>
    </div>
    <div class="flex-row__cell flex-row__cell--grow">
      <%= f.association :groups, label: false, collection: [], input_html: { class: "form-control group-input", readonly: true } %>
    </div>
    <div class="flex-row__cell">
      <%= f.input :operator, label: false, include_blank: false, collection: SegmentGroupScopeRule.operators, input_html: { style: "width: auto;" } %>
    </div>
  </div>
</div>
