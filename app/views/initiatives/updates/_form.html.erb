<div class="content__main">
  <%= simple_form_for [@initiative, @update], url: url do |f| %>

    <div class="card">
      <div class="card__section">
        <%= f.input :report_date, input_html: { autofocus: true } %>
      </div>
      <div class="card__section">
        <% @initiative.fields.each do |cf| %>
          <%= render "shared/fields/display/custom_field", f: f, cf: cf, resource: @update %>
        <% end %>
      </div>
    </div>

    <%= f.button :submit, 'Save' %>
  <% end %>
</div>
