<div class="content__header">
  <img class="logo logo--large" src="<%= image_path "diverst-logo.svg" %>">
  <p>Connect with someone within Anycorp based on your common interest but diverse background to explore new ideas or think outside the box to solve problems.</p>
</div>

<div class="content__main">
  <div class="card">
    <div class="card__section">
      <h2><%= @poll.title %></h2>
      <p><%= @poll.description %></p>
    </div>
  </div>
  <div class="card">
    <div class="card__section">
      <%= simple_form_for [@poll, @response] do |f| %>
        <% @poll.fields.each do |cf| %>
          <%= render "shared/fields/display/custom_field", cf: cf, f: f, resource: Employee.first %>
        <% end %>

        <%= f.button :submit, class: 'btn--secondary btn--large btn--full' %>
      <% end %>
    </div>
  </div>
</div>

<script>
  $('.select2').select2();
</script>