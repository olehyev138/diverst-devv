<div class="content__header">
  <h1>Resources</h1>
  <%= link_to "+ Add resource", polymorphic_path([@container, :resource], action: "new"), class: "btn btn--primary" if policy(Resource).new? %>
</div>

<div class="content__main">
  <div class="card">
    <div class="card__section">
      <table class="table--has-border" id="resources-table">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Creation date</th>
          <th>Options</th>
        </thead>
        <tbody>
          <% @resources.each do |resource| %>
            <tr>
              <td class="icon-column"><a href="<%= resource.file.url %>" class="icon icon--bg icon--large" style="background-image: url(<%= thumbnail_for_resource(resource) %>)"></a></td>
              <td><%= link_to resource.title, resource.file.url, target: '_blank' %></td>
              <td><%= resource.created_at.to_s :reversed_slashes %></td>
              <td>
                <%= link_to "Edit", polymorphic_path([@container, resource], action: "edit") if policy(resource).edit? %> -
                <%= link_to "Delete", [@container, resource], method: :delete, class: "error", data: { confirm: "Are you sure?" } if policy(resource).destroy? %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>