<div class="desktop">
  <h2 style="margin-left: 33%; color: #fff">Get your Activation Link  - enter your 8-digit Employee ID</h2>
  <div class="col sm-12 md-5">
    <div class="card" style="left: 80%;">
      <div class="card__section">
        <%= simple_form_for(:user, url: alternative_activation_activate_path, html: { method: :post }) do |f| %>
          <%= f.input :email, label: 'Employee ID', autofocus: true %>
          <%= f.input :notifications_email, label: 'Email' %>
          <%= f.input :dob, label: 'Date of Birth', placeholder: 'mm-dd' %>
          <%= f.button :submit, value: "Send activation link" %>
        <% end %>

        <% content_for :links do %>
          <div class="text-center">
          </div>
        <% end %>
      </div>  
    </div>    
  </div>
</div>

