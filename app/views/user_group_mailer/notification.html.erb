Hello <%= @user.name %>, a new item has been posted to a Diversity and Inclusion group you are a member of.  Select the link(s) below to access Diverst and review the item(s)<br/>

<% @groups.each do |group| %>
  <% if (group[:events_count ].to_i > 0 || group[:participating_events_count].to_i > 0 || group[:messages_count].to_i > 0) || (group[:news_count].to_i > 0) %>
    <strong><%= @custom_text.erg_text %> <%= group[:group].name %></strong>
  <% end %>

  <% if group[:events_count ].to_i > 0 %>
    <%= link_to pluralize(group[:events_count], 'new event'), group_events_url(group[:group].try(:id), saml_for_enterprise: @user.enterprise.id ) %>
  <% end %>

  <% if group[:messages_count].to_i > 0 %>
    <br/>
    <%= link_to pluralize(group[:messages_count], 'new message'), group_posts_url(group[:group].try(:id), saml_for_enterprise: @user.enterprise.id ) %>
  <% end %>

  <% if group[:news_count].to_i > 0 %>
    <br/>
    <%= link_to "#{ group[:news_count] } news item(s)", group_posts_url(group[:group].try(:id), saml_for_enterprise: @user.enterprise.id) %>.
  <% end %>
  
  <% if group[:social_links_count].to_i > 0 %>
    <br/>
    <%= link_to "#{ group[:social_links_count] } news item(s)", group_social_links_url(group[:group].try(:id), saml_for_enterprise: @user.enterprise.id) %>.
  <% end %>
  
  <% if group[:participating_events_count].to_i > 0 %>
    <br/>
    <%= link_to pluralize(group[:participating_events_count], 'new participating event'), group_events_url(group[:group].try(:id), saml_for_enterprise: @user.enterprise.id) %>.
  <% end %>
  <br/>
<% end %>
<br/>
Email notification options may be changed <%= link_to "here", user_preferences_edit_url(saml_for_enterprise: @user.enterprise.id) %>
