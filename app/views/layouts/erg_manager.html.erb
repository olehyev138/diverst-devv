<% content_for :secondary_nav do %>
  <div class="menu menu--mobile">
    <button
      class="m-hamburger"
      aria-label="Menu"
      aria-controls="navigation"
      data-jq-dropdown="#navigation">
      <span>Menu</span>
    </button>
    <nav id="navigation" class="jq-dropdown jq-dropdown-tip">
      <ul class="jq-dropdown-menu">
        <li>
          <%= active_link_to "Metrics", metrics_dashboards_path if policy(MetricsDashboard).index? %>
        </li>
        <li>
          <%= active_link_to c_t(:erg).pluralize, groups_path, :active => :exact if policy(Group).manage_all_groups? %>
        </li>
        <li>
          <%= active_link_to c_t(:segment).pluralize, segments_path if policy(Segment).index? %>
        </li>
        <li>
          <%= active_link_to "Resources", enterprise_folders_path(current_user.enterprise) if EnterpriseFolderPolicy.new(current_user).index? %>
        </li>
        <li>
          <%= active_link_to "Archived Posts", archived_posts_path %>
        </li>
        <li>
          <%= active_link_to "Calendar", calendar_groups_path if policy(Group).calendar? %>
        </li>
        <% if current_user.enterprise.plan_module_enabled %>
          <% if GroupBudgetPolicy.new(current_user, []).manage_all_budgets? %>
            <li><%= active_link_to "Budgeting", close_budgets_groups_path %>
            </li>
          <% end %>
        <% end %>
        <% if policy(Campaign).create? %>
          <li><%= active_link_to "Innovate", campaigns_path %></li>
        <% end %>
        <% if policy(Poll).create? %>
          <li><%= active_link_to "Include", polls_path %></li>
        <% end %>
        <% if global_settings_path %>
          <li><%= active_link_to "Global Settings", global_settings_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>

  <div class="menu menu--desktop">
    <%= active_link_to "Metrics", metrics_dashboards_path, class: "secondary-header__tab", class_active: "secondary-header__tab--is-selected", active: [['metrics_dashboards'], []] if policy(MetricsDashboard).index? %>
    <%= active_link_to c_t(:erg).pluralize, groups_path, :active => :exact, class: "secondary-header__tab", class_active: "secondary-header__tab--is-selected" if policy(Group).manage_all_groups? %>
    <%= active_link_to c_t(:segment).pluralize, segments_path, class: "secondary-header__tab", class_active: "secondary-header__tab--is-selected" if policy(Segment).index? %>
    <%= active_link_to "Resources", enterprise_folders_path(current_user.enterprise), class: "secondary-header__tab", class_active: "secondary-header__tab--is-selected" if EnterpriseFolderPolicy.new(current_user).index? %>

    <%= active_link_to 'Archive&nbsp;<span class="caret"></span>'.html_safe, "", "aria-label":"Archive", "aria-control": "navigation", "data-jq-dropdown": "#archive", class: "secondary-header__tab", class_active: "secondary-header__tab--is-selected", active: :exclusive %>
  <nav id="archive" class="jq-dropdown jq-dropdown-tip">
    <ul class="jq-dropdown-menu">
      <li>
        <%= active_link_to "Archived Posts", archived_posts_path, class: "secondary-header__tab" %>     
      </li>
    </ul>
  </nav>
    <%= active_link_to "Calendar", calendar_groups_path, class: "secondary-header__tab", class_active: "secondary-header__tab--is-selected" if policy(Group).calendar? %>
  </div>
<% end %>

<%= render template: "layouts/dashboard" %>
