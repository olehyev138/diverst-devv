<% content_for :secondary_nav do %>
<div class="menu menu--mobile">
  <button
    class="m-hamburger"
    aria-label="Menu"
    aria-controls="navigation"
    data-jq-dropdown="#navigation">
    <span>Menu</span>
  </button>
  <nav id="navigation" class="jq-dropdown jq-dropdown-tip">
    <ul class="jq-dropdown-menu">
      <li>
        <%= active_link_to "Users", users_path if policy(User).index? %>
      </li>
      <li>
        <%= active_link_to "SSO", edit_auth_enterprise_path(current_user.enterprise) if current_user.policy_group.sso_manage? %>
      </li>
      <li>
        <%= active_link_to "Permissions", policy_group_templates_path if current_user.policy_group.permissions_manage? %>
      </li>
      <li>
        <%= active_link_to "Fields", edit_fields_enterprise_path(current_user.enterprise) if policy(current_user.enterprise).edit_fields? %>
      </li>
      <li>
        <%= active_link_to "Texts", edit_custom_text_path(current_user.enterprise.custom_text) if policy(current_user.enterprise).edit_fields? %>
      </li>
      <li>
        <%= active_link_to "Branding", edit_branding_enterprise_path(current_user.enterprise) if policy(current_user.enterprise).edit_fields? %>
      </li>
      <li>
        <%= active_link_to "Integrations", integrations_path, class: "secondary-header__tab" if current_user.policy_group.sso_manage? %>
      </li>
      <li>
        <%= active_link_to c_t(:dci_abbreviation), rewards_path, class: "secondary-header__tab" if current_user.policy_group.diversity_manage? %>
      </li>
      <li>
        <%= active_link_to "Logs", logs_path, class: "secondary-header__tab" if current_user.policy_group.logs_view? %>
      </li>
      <li>
        <%= active_link_to "Posts", edit_posts_enterprise_path(current_user.enterprise) if current_user.policy_group.manage_posts? %>
      </li>
      <% if manage_erg_root_path %>
        <li>
          <%= active_link_to "Manage #{c_t(:erg)}", manage_erg_root_path %>
        </li>
      <% end %>
      <% if current_user.enterprise.plan_module_enabled %>
        <% if current_user.policy_group.groups_budgets_manage? && current_user.policy_group.groups_manage? %>
          <%= active_link_to "Budgeting", close_budgets_groups_path, class: "secondary-header__tab", class_active: "secondary-header__tab--is-selected" %>
        <% end %>
      <% end %>
      <% if policy(Campaign).create? %>
        <li><%= active_link_to "Innovate", campaigns_path %></li>
      <% end %>
      <% if policy(Poll).create? %>
        <li><%= active_link_to "Include", polls_path %></li>
      <% end %>
    </ul>
  </nav>
</div>

<div class="menu menu--desktop">
  <%= active_link_to "Users", users_path, class: "secondary-header__tab", class_active: "secondary-header__tab--is-selected" if policy(User).index? %>
  
  <%= active_link_to 'Settings&nbsp;<span class="caret"></span>'.html_safe, "", "aria-label":"Settings", "aria-control": "navigation", "data-jq-dropdown": "#settings", class: "secondary-header__tab", class_active: "secondary-header__tab--is-selected", active: :exclusive %>
  <nav id="settings" class="jq-dropdown jq-dropdown-tip">
    <ul class="jq-dropdown-menu">
      <% if current_user.policy_group.sso_manage? %>
        <li>
          <%= active_link_to "SSO", edit_auth_enterprise_path(current_user.enterprise) %>
        </li>
      <% end %>
      <% if current_user.policy_group.permissions_manage? %>
        <li>
          <%= active_link_to "Permissions", policy_group_templates_path %>
        </li>
      <% end %>
      <% if current_user.policy_group.branding_manage? %>
        <li>
          <%= active_link_to "Emails", emails_path %>
        </li>
      <% end %>
      <% if current_user.policy_group.branding_manage? %>
        <li>
          <%= active_link_to "Branding", edit_branding_enterprise_path(current_user.enterprise) %>
        </li>
      <% end %>
      <% if current_user.policy_group.sso_manage? %>
        <li>
          <%= active_link_to "Integrations", integrations_path %>
        </li>
      <% end %>
      <% if current_user.policy_group.sso_manage? %>
        <li>
          <%= active_link_to "Texts", edit_custom_text_path(current_user.enterprise.custom_text) %>
        </li>
      <% end %>
      <% if current_user.policy_group.sso_manage? %>
        <li>
          <%= active_link_to "Fields", edit_fields_enterprise_path(current_user.enterprise) %>
        </li>
      <% end %>
    </ul>
  </nav>
  
  <%= active_link_to "Logs", logs_path, class: "secondary-header__tab", class_active: "secondary-header__tab--is-selected" if current_user.policy_group.logs_view? %>

  <%= active_link_to 'Diversity&nbsp;<span class="caret"></span>'.html_safe, "", "aria-label":"Diversity", "aria-control": "navigation", "data-jq-dropdown": "#diversity", class: "secondary-header__tab", class_active: "secondary-header__tab--is-selected", active: :exclusive %>
  <nav id="diversity" class="jq-dropdown jq-dropdown-tip">
    <ul class="jq-dropdown-menu">
      <% if current_user.policy_group.diversity_manage? %>
        <li>
          <%= active_link_to c_t(:dci_abbreviation), rewards_path %>
        </li>
      <% end %>
      <% if current_user.policy_group.manage_posts? %>
        <li>
          <%= active_link_to "Posts", edit_pending_comments_enterprise_path(current_user.enterprise) %>
        </li>
      <% end %>
    </ul>
  </nav>
  
</div>
<% end %>

<%= render template: "layouts/dashboard" %>
