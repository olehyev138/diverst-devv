$("#archived_news_<%= @post.id %>").fadeOut(500, function(){
	$(this).remove();
	decreasePostsCount();
});

$("#archived_message_<%= @post.id %>").fadeOut(500, function(){
	$(this).remove();
	decreasePostsCount();
});

function decreasePostsCount() {
	var archived_posts_count = parseInt(document.getElementById('archived_posts_count').innerHTML);
	document.getElementById('archived_posts_count').innerHTML = archived_posts_count - 1;
}