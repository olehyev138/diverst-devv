<div class="content__header">
  <h1>News</h1>
  <%= link_to "+ Create news link", new_group_news_link_path, class: "btn btn--primary" %>
</div>

<div class="content__main">
  <div class="card">
    <% @news_links.each do |news_link| %>
      <div class="card__section card__section--border">
        <h3><%= news_link.title %></h3>
        <p><%= news_link.description %><br><%= link_to news_link.url %></p>
      </div>
    <% end %>
  </div>
</div>


