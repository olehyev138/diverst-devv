<div class="content__header">
  <h1>Group Leaders</h1>
  <% if policy(@group).update? %>
    <%= link_to "+ Add leader", new_group_leader_path(@group), class: "btn btn--primary" %>
  <% end %>
</div>

<div class="content__main">
  <div class="card">
    <% if @group_leaders.empty? %>
      <div class="card__section">
        <p>No leaders yet.</p>
      </div>
    <% else %>
      <div class="card__section">
        <% if @group_leaders.any? %>
          <table class="table--has-border" id="group-leaders">
            <thead>
              <th>Name</th>
              <th>Position</th>
              <th>Actions</th>
            </thead>
            <tbody>
              <% @group_leaders.each do |group_leader| %>
                <tr>
                  <td><%= group_leader.user.name %></td>
                  <td><%= group_leader.position_name %></td>
                  <% if policy(@group).edit? %>
                    <td>
                      <%= link_to "Edit", edit_group_leader_path(@group, group_leader) %> -
                      <%= link_to "Delete", group_leader_path(@group, group_leader), method: :delete, class: 'error', data: { confirm: "Are you sure?" } %>
                    </td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <p>No leaders yet.</p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
