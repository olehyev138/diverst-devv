<div class="content__main">
  <div class="card">
    <div class="card__section">
      <%= simple_form_for [@group, @message] do |f| %>
        <%= f.input :subject %>
        <%= f.input :content %>
        <%= f.association :segments, collection: @group.enterprise.segments, input_html: { class: "select2" } %>

        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>

<script>
  $('.select2').select2();
</script>