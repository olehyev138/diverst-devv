<div class="card">
  <div class="card__section">
    Leave a comment:
  </div>

  <div class="card__section">
    <%= simple_form_for @new_comment, url: group_group_message_create_comment_path(@group, @message), method: 'post' do |f| %>
      <%= f.input :content, label: false %>

      <%= f.button :submit, value: "Post a comment", style: "margin-top: 30px;" %>
    <% end %>
  </div>
</div>