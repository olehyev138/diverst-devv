<div class="content__header">
  <h1>Add users to a group via CSV</h1>
</div>

<div class="content__main">
  <div class="card">
    <div class="card__section">
      
      <% if @successful_rows %>
        <h3>Successful Rows</h3>
        <ul>
          <% @successful_rows.each do |row| %>
            <li><%= row %></li>
          <% end %>
        </ul>
      <% end %>
      
      <% if @failed_rows %>
        <h3>Unsuccessful Rows</h3>
        <ul>
          <% @failed_rows.each do |row| %>
            <li><%= row[:error] %> - <%= row[:row] %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>