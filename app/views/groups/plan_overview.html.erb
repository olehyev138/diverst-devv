<div class="content__header">
  <h1>Overview</h1>
</div>

<div class="content__main">
  <% @groups.each do |group| %>
    <div class="card">
      <div class="card__section">
        <h2>
          <b><%= group.name %></b>
        </h2>

        <h3 style="margin-left: 10px; margin-botton: -10px;">ERG Budget | <%= link_to "View Budget Details", budgets_group_path(group) %>
        </h3>
        <table class="table--has-border">
          <thead>
            <th>Annual budget</th>
            <th>Pre-approved budget</th>
            <th>Available budget</th>
            <th>Spent so far</th>
            <th>Leftover</th>
          </thead>
          <tbody>
            <td><%= number_to_currency group.annual_budget %></td>
            <td><%= number_to_currency group.approved_budget %></td>
            <td><%= number_to_currency group.available_budget %></td>
            <td><%= number_to_currency group.spent_budget %></td>
            <td><%= number_to_currency group.leftover_money %></td>
          </tbody>
        </table>

        <%= link_to "Events Budget Info", '#', class: "detailed_info btn btn--primary"%>

        <table class="event_spendings table--has-border">
          <thead>
            <th>Event</th>
            <th>Estimated funding</th>
            <th>Spent so far</th>
            <th>Spending status</th>
          </thead>
          <tbody>
            <% group.initiatives.each do |initiative| %>
              <tr>
                <td><%= initiative.name %></td>
                <td><%= number_to_currency initiative.estimated_funding, precision: 0 %></td>
                <td><%= number_to_currency initiative.expenses.sum(:amount), precision: 0 %></td>
                <td><%= initiative.expenses_status %></td>
              </tr>
            <% end %>
            <tr class="highlight">
              <td>Total for <%= group.name %></td>
              <td><%= number_to_currency group.initiatives.sum(:estimated_funding), precision: 0 %></td>
              <td><%= number_to_currency group.initiatives.map{ |i| i.expenses.sum(:amount) }.sum, precision: 0 %></td>
              <td></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>

<script>
  $('table.event_spendings').hide();

  $('a.detailed_info').click(function(e){
    $(this).siblings('table.event_spendings').toggle('fast');
  }); //endof click
</script>