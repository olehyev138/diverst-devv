<% random = SecureRandom.hex %>
<% if @group.sponsors.any? %>
  <div class="card card--secondary">
    <% if group_sponsors.count > 1 %>
      <span style="float: left;">
        <a href="#group_sponsor_carousel_<%= random %>" role="button" data-slide="prev">
          <%= inline_svg('icons/left-arrow.svg', class: "icon") %>
          <span class="sr-only">Previous</span>
        </a>
      </span>

      <span style="float: right;">
        <a href="#group_sponsor_carousel_<%= random %>" role="button" data-slide="next">
          <%= inline_svg('icons/right-arrow.svg', class: "icon") %>
          <span class="sr-only">Next</span>
        </a>
      </span>
    <% end %>

    <div class="card__section">
      <div id ="group_sponsor_carousel_<%= random %>" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner" role="listbox">

          <% group_sponsors.each_with_index do |group_sponsor, index| %>
            <div class="item <%= 'active' if index == 0 %>">
              <% show_sponsor?(group_sponsor) do %>
                <% if group_sponsor.sponsor_media.present? %>
                  <% show_sponsor_media?(group_sponsor, "sponsor_media_content_type") do %>
                    <%= image_tag(group_sponsor.sponsor_media.expiring_url(3600), style: 'max-width: 100px; max-height:90px; border-radius: 80px; cursor: pointer;') %>
                  <% end %>
                <% else %>
                  <%= image_tag("missing_user.png", size: "70x70") %>
                <% end %>

                <p style="font-style: italic;"><%= group_sponsor.sponsor_name %><br>
                <%= group_sponsor.sponsor_title.present? ? group_sponsor.sponsor_title : nil %></p>
                  <% if policy(group_sponsor).sponsor_message_visibility? %>
                    <p style="font-style: italic; padding-top: 10px; padding-left: 10px;"><%= truncate(group_sponsor.sponsor_message, length: 200) %></p>
                  <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<script>
  $('.carousel').carousel({
    interval: 2000
  })
</script>