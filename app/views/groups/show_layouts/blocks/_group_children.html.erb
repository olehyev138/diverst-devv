<% unless @group.children.count == 0 %>
	<% if @group.group_category_type.nil? %>
	<div class="card card--secondary">
		<div class="card__section">
			<%= c_t(:sub_erg).pluralize %>(<%= @group.children.count %>)

			<% if policy(@group).erg_leader_permissions? %>
			<div class="dropdown">
				<span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
				<div class="dropdown-content">
					<p>Create Categories for <%= c_t(:sub_erg).pluralize %> <%= link_to "Here", group_categories_url(parent_id: @group.id) %></p>
				</div>
			</div>
			<% end %>
			<br>
			<% if @group.children.count >= 5 %>
		  	<% @group.children.limit(5).each do |child| %>
		    	<%= link_to child.name, child %>
		      	<span class="muted" style="font-size: 14px;">
		      		(<% if current_user.is_member_of? child %>
		        	member
		        	<% else %>
		        	not member
		        	<% end %>)</span><br>
		  	<% end %>
		  	<%= link_to "View #{@group.children.count - 5} More", "#", class: "sub_ergs", id: @group.id %>
		  	<%= link_to "View #{@group.children.count - 5} More", "#", class: " hide_sub_ergs", id: @group.id, style: "display:none;" %>

		  	<% @group.children.last(@group.children.count - 5).each do |sub_erg| %>
		  	<div class="remaining_children_<%= @group.id %>" style="display:none; position: relative; top: 10px;">
			  	<ol><%= link_to sub_erg.name, group_url(sub_erg) %>
		      	<span class="muted" style="font-size: 14px;">
			    	(<% if current_user.is_member_of? sub_erg %>
		      	member
		      	<% else %>
		      	not member
		      	<% end %>)</span>
			  	</ol>
		  	</div>
		  	<% end %>
			<% else %>
		  	<% @group.children.each do |child| %>
		    	<%= link_to child.name, child %>
		      	<span class="muted" style="font-size: 14px;">
		      		(<% if current_user.is_member_of? child %>
		        	member
		        	<% else %>
		        	not member
		        	<% end %>)</span>
		        	<br>
		  	<% end %>
			<% end %>
		</div>
	</div>
	<% else %>
	<div class="card card--secondary">
		<div class="card__section">
			Sub-<%= c_t(:erg).titleize.pluralize %>(<%= @group.children.count %>)<br>
			<ol>
				<% @group.group_category_type.group_categories.each do |category| %>
			  	<% if category.groups.where(parent_id: @group).count > 0  %>
			  	<li>
				  	<%= link_to category, "#", class: "nested_show", id: category.id %>
				  	<%= link_to category, "#", class: "nested_hide", id: category.id, style: "display:none;" %>(<%= category.groups.where(parent_id: @group).count %>)

				  	<% category.groups.where(parent_id: @group).each do |sub_group| %>
				    	<div class="children_<%= category.id %>" style="display:none; position: relative; top: 10px;">
					    	<ol><%= link_to sub_group.name, group_url(sub_group) %>
					    		<span class="muted" style="font-size: 14px;">
					    			(<% if current_user.is_member_of? sub_group %>
					    			member
					    			<% else %>
					    			not member
					    			<% end %>)</span>
					    	</ol>
					  		<br>
				    	</div>
				  	<% end %>
			  	</li>
			  	<% end %>
				<% end %>
			</ol>
			<% @group.children.where(group_category_id: nil).each do |sub_group_with_no_category| %>
		  	<%= link_to sub_group_with_no_category.name, group_url(sub_group_with_no_category) %>
		  	<span class="muted" style="font-size: 14px;">
		      		(<% if current_user.is_member_of? sub_group_with_no_category %>
		        	member
		        	<% else %>
		        	not member
		        	<% end %>)</span>
		  	<br>
			<% end %>
		</div>
	</div>
	<% end %>
<% end %>
