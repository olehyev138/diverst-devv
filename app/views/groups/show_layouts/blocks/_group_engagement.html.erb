<div class="card card--secondary">
  <div class="card__section">
    <ol>
      <button type="button" class="btn btn--primary btn--small" data-toggle="modal" data-target="#usersToInviteToGroup">
        Invite Users to <%= c_t(:erg) =%>
      </button>
    </ol>
  </div>
  <div class="card__section">
    <ol>
      <%= render 'groups/show_layouts/blocks/suggest_hire' %>
    </ol>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="usersToInviteToGroup" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="usersToInviteToGroupTitle">Invite User(s) To Group</h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="card__section">
            <table
                class="table--has-border data-table"
                data-no-sortable="2"
                data-source="<%= users_to_invite_to_group_path(@group, q: params[:q], format: :json) %>">
                <thead>
                <th>Name</th>
                <th>Email</th>
                <th>Options</th>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $('#usersToInviteToGroup').on('shown.bs.modal', function(){
      $('a.send-invite').on('ajax:success', function(){
          $(this).fadeOut('slow', function(){
              this.replaceWith('Sent Inivite!');
          })
      })
  });
</script>