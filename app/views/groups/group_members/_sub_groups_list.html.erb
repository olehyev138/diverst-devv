<div class="modal-header">
  <h4 class="modal-title text-center">
  <%= "List of #{c_t(:sub_erg).pluralize}" %>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body">
  <div class="card__section row">
    <%= form_tag export_sub_groups_members_list_csv_group_group_members_path(@group), method: :post, id: 'formId' do %>
    <% @group.children.each do |child| %>

    <div class="col md-6 mb10">
      <label class="control">                      
        <%= check_box_tag("groups[#{child.name.split(' ').join('_')}]", child.id, false, { class: "control__input" }) %>   
        <span class="control__indicator control__indicator--checkbox"></span><span class="control__label"><%= child.name %></span>
      </label>
    </div>
    <% end %>
  </div>        
  <br>        
  <div class="modal-footer">
    <%= submit_tag 'Export', class: 'btn btn-primary', form: 'formId' %>
  </div>
  <% end %>    
</div>

