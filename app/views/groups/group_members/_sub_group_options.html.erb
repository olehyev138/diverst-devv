<div class="modal-header">
  <h4 class="modal-title text-center">
 Choose to join any <%= c_t(:sub_erg).pluralize %> of <%= @group.name %> <%= link_to "DONE", :back, class: "btn btn--primary btn--extra--small" %>
  </h4>
</div>
<div class="modal-body">
  <div class="container-fluid">
    <div class="row text-center">
    <% @group.children.each do |sub_group| %>
      <p><%= sub_group.name %><%= link_to join_sub_group_group_group_member_path(sub_group, current_user), class: "click_join", id: sub_group.id,  method: :post, remote: true do %>
        <button class="btn btn--primary btn--extra--small">
           join <%= c_t(:sub_erg) %>
        </button>
        <% end %>
      <%= link_to leave_sub_group_group_group_member_path(sub_group, current_user), class: "click_leave", style: 'display:none;', id: sub_group.id,  method: :delete, remote: true do %>
        <button class="btn btn--primary btn--extra--small">
          leave <%= c_t(:sub_erg) %>
        </button>
        <% end %>
      </p>
    <% end %>
    </div>
  </div>
</div>

<script>
  $('a.click_join').click(function(e){
    $(this).siblings('a.click_leave').show();
    $(this).hide();
  }); //endof click

  $('a.click_leave').click(function(e){
    $(this).siblings('a.click_join').show();
    $(this).hide();
  }); //endof click
</script>