<% unless news_feed_link.news_feed.group.enterprise.disable_likes || news_feed_link.approved == false %>
  <%= button_tag data: { message: 'like button', news_feed_link_id: news_feed_link.id, is_liked: is_post_liked?(news_feed_link.id) }, class: "likeBtn", title: 'like button' do %>
    <img class="svg <%= is_post_liked?(news_feed_link.id) ? "likeImgFill" : "likeImg" %>" width="36px" height="36px" src="<%= image_path('icons/like.svg') %>" />
  <% end %>
  <span class="likeCount" id="likeCount<%= news_feed_link.id %>"><%= news_feed_link.likes.size %></span>
<% end %>
