<div class="card__section card__section--border">
  <div class="row">
    <div class="col sm-1 text-center">
      <%= button_tag (image_tag image_path(is_post_liked?(social_link.news_feed_link.id) ? "icons/like-active.svg" : "icons/like.svg"), size: "48"), data: { news_feed_link_id: social_link.news_feed_link.id, is_liked: is_post_liked?(social_link.news_feed_link.id) }, class: "like-btn" if social_link.news_feed_link.approved? %>
      <span class="likeCount" id="likeCount<%= social_link.news_feed_link.id %>"><%= social_link.news_feed_link.news_feed_likes.count %></span>
    </div>
    <div class="col sm-11">
      <div class="flex-row flex-row--middle">
        <div class="flex-row__cell flex-row__cell--grow">
          <% if social_link.url.include?("facebook") %>
            <iframe src="https://www.facebook.com/plugins/post.php?href=<%= social_link.url_safe %>&width=500&show_text=true&height=290&appId" width="500" height="290" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true"></iframe>
          <% elsif social_link.url.include?("instagram") %>
            <iframe width="320" height="440" src="<%= social_link.url %>embed" frameborder="0"></iframe>
          <% else %>
            <%= raw social_link.embed_code %>
          <% end %>
        </div>
        <div class="flex-row__cell link-group">
          <%= link_to "Approve", approve_group_posts_path(:group_id => social_link.group.id, :link_id => social_link.news_feed_link.id), method: :post, class: "btn btn--primary" if policy(social_link.group).erg_leader_permissions? and !social_link.news_feed_link.approved? %>
          <%= link_to 'Delete', group_social_link_path(social_link.group, social_link.id),method: :delete, class: "btn btn--danger", data: { confirm: "Are you sure?" } if policy(social_link).destroy? %>
        </div>
      </div>
    </div>
  </div>
</div>