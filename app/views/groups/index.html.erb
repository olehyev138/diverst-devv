<div class="content__header">
  <h1><%= c_t(:erg).pluralize %></h1>
  <%= link_to "New #{ c_t(:erg) }", new_group_path, class: "btn btn--primary" if policy(Group).new? %>
</div>

<div class="content__main">
  <div class="card">
    <% @groups.each do |group| %>
      <div class="card__section card__section--border">
        <div class="flex-row flex-row--middle">
          <div class="flex-row__cell">
            <%= link_to group_path(group) do %><%= image_tag group.logo.expiring_url(3600, :thumb), class: "avatar" %><% end %>
          </div>
          <div class="flex-row__cell flex-row__cell--grow"><%= link_to "#{group.name}", group_path(group), class: "accent" %> - <%= pluralize group.active_members.count, "member" %></div>
          <div class="flex-row__cell link-group">
            
            <% if group.children.count > 0 %>
              <%= link_to "Show Sub-#{ c_t(:erg).pluralize }", "#", class: "nested_show", id: group.id%>
              <%= link_to "Hide Sub-#{ c_t(:erg).pluralize }", "#", class: "nested_hide", id: group.id, style: "display:none;" %>
            <% end %>
            
            <%= link_to "Export", export_csv_group_path(group), class: "muted" if policy(group).edit? %>
            <%= link_to "Import", import_csv_group_path(group), class: "muted" if policy(group).edit? %>
            <%= link_to "Edit", edit_group_path(group), class: "muted" if policy(group).edit? %>
            <%= link_to "Delete", group_path(group), method: :delete, class: "error", data: { confirm: "Are you sure?" } if policy(group).destroy? %>
          </div>
        </div>
      </div>
      <% group.children.each do |child| %>
        <div class="card__section card__section--border children_<%= group.id%>" style="display:none;">
          <div class="flex-row flex-row--middle">
            <div class="flex-row__cell">
              <%= link_to group_path(child) do %><%= image_tag child.logo.expiring_url(3600, :thumb), class: "avatar" %><% end %>
            </div>
            <div class="flex-row__cell flex-row__cell--grow">
              <span class="field__label"><%= "Sub-#{ c_t(:erg) } for #{group.name}" %></span>
              <span><%= link_to "#{child.name}", group_path(child), class: "accent" %> - <%= pluralize child.active_members.count, "member" %></span>
              </div>
            <div class="flex-row__cell link-group">
              <%= link_to "Export", export_csv_group_path(child), class: "muted" if policy(child).edit? %>
              <%= link_to "Import", import_csv_group_path(child), class: "muted" if policy(child).edit? %>
              <%= link_to "Edit", edit_group_path(child), class: "muted" if policy(child).edit? %>
              <%= link_to "Delete", group_path(child), method: :delete, class: "error", data: { confirm: "Are you sure?" } if policy(child).destroy? %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<script>
  $('a.nested_show').click(function(e){
    var id = $(this).attr('id');
    $('div.children_' + id).show();
    $(this).siblings('a.nested_hide').show();
    $(this).hide();
  }); //endof click
  
  $('a.nested_hide').click(function(e){
    var id = $(this).attr('id');
    $('div.children_' + id).hide();
    $(this).siblings('a.nested_show').show();
    $(this).hide();
  }); //endof click
</script>