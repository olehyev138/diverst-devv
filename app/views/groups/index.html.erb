<h1>Groups</h1>

<%= link_to "+ New Group", new_group_path %>

<ul>
  <% @groups.each do |group| %>
    <li><%= group.name %> (<%= pluralize group.members.count, "member" %>) - <%= link_to "Show", group_path(group) %> - <%= link_to "Edit", edit_group_path(group) %> - <%= link_to "Delete", group_path(group), method: :delete %></li>
  <% end %>
</ul>