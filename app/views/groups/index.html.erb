<div class="content__header">
  <h1><%= c_t(:erg).pluralize %></h1>
  <%= link_to "New #{ c_t(:erg) }", new_group_path, class: "btn btn--primary" if GroupPolicy.new(current_user, Group).new? %>
</div>

<div class="content__main">
  <div class="card" id="groups" data-url="<%= sort_groups_path %>">
    <% @groups.all_parents.each do |group| %>
      <div class="card__section card__section--border" id="group_<%= group.id %>">
        <label class="field__label" id="handle" style="float: left; margin-top: 10px;">  
          <%= label = "#{ inline_svg('icons/move.svg', class: 'icon') }".html_safe %>
        </label>
        <div class="flex-row flex-row--middle">
          <div class="flex-row__cell" id="handle">
            <%= link_to group_path(group) do %><%= image_tag group.logo.expiring_url(3600, :thumb), class: "avatar" %><% end %>
          </div>
          <div class="flex-row__cell flex-row__cell--grow"><%= link_to "#{group.name}", group_path(group), class: "accent" %> - <%= pluralize group.active_members.size, "member" %></div>
          <div class="flex-row__cell link-group">

            <% if group.children.size > 0 %>
              <%= link_to "Show #{ c_t(:sub_erg).pluralize }", "#", class: "nested_show", id: group.id%>
              <%= link_to "Hide #{ c_t(:sub_erg).pluralize }", "#", class: "nested_hide hidden-xs", id: group.id, style: "display:none;" %>

              <% if current_user.enterprise.group_category_types.empty? %>
                <%= link_to "Categorize #{ c_t(:sub_erg).pluralize }", new_group_category_url(parent_id: group.id), class: "hidden-xs" %>
              <% else %>
                <%= link_to "Categorize #{ c_t(:sub_erg).pluralize }", group_categories_url(parent_id: group.id), class: "hidden-xs" %>
              <% end %>
            <% end %>


            <%= link_to "Export", export_csv_group_path(group), class: "muted hidden-xs", role: "button", 'aria-label': "Export" if GroupPolicy.new(current_user, group).edit? and current_user.is_admin? %>
            <%= link_to "Import", import_csv_group_path(group), class: "muted hidden-xs", role: "button", 'aria-label': "Import" if GroupPolicy.new(current_user, group).edit? %>
            <%= link_to "Edit", edit_group_path(group), class: "muted" if GroupPolicy.new(current_user, group).edit? %>
            <%= link_to "Delete", group_path(group), method: :delete, class: "error", data: { confirm: "Are you sure?" } if GroupPolicy.new(current_user, group).destroy? %>
          </div>
        </div>

        <span class="field__label children_<%= group.id%>" style="display:none; margin-top: 10px;"><%= "#{ c_t(:sub_erg).pluralize } for #{group.name}" %></span>

      <% group.children.each do |child| %>
        <div class="children_<%= group.id%>" style="display:none; position: relative; top: 10px;">
          <div class="flex-row flex-row--middle" style="margin-bottom: 10px;">
            <div class="flex-row__cell"></div>
            <div class="flex-row__cell">
              <%= link_to group_path(child) do %><%= image_tag child.logo.expiring_url(3600, :thumb), class: "avatar" %><% end %>
            </div>
            <div class="flex-row__cell flex-row__cell--grow">
              <span><%= link_to "#{child.name}", group_path(child), class: "accent" %> - <%= pluralize child.active_members.size, "member" %></span>
              </div>
            <div class="flex-row__cell link-group">
              <%= link_to "Export", export_csv_group_path(child), class: "muted hidden-xs", role: "button", 'aria-label': "Export" if GroupPolicy.new(current_user, child).edit? %>
              <%= link_to "Import", import_csv_group_path(child), class: "muted hidden-xs", role: "button", 'aria-label': "Import" if GroupPolicy.new(current_user, child).edit? %>
              <%= link_to "Edit", edit_group_path(child), class: "muted" if GroupPolicy.new(current_user, child).edit? %>
              <%= link_to "Delete", group_path(child), method: :delete, class: "error", data: { confirm: "Are you sure?" } if GroupPolicy.new(current_user, child).destroy? %>
            </div>
          </div>
        </div>
      <% end %>

      </div>
    <% end %>
  </div>
</div>

<script>
  $(document).on('ready page:load', function(){
    $('#groups').sortable(
    {
      handle: '#handle',
      cursor: 'move',
      axis: 'y',
      update: function() {
         $.ajax({
          type: "POST",
          url: $(this).data('url'),
          data: $(this).sortable('serialize')
         });
      }
    }
    );
  });

  $('a.nested_show').click(function(e){
    var id = $(this).attr('id');
    $('div.children_' + id).show();
    $('span.children_' + id).show();

    $(this).siblings('a.nested_hide').show();
    $(this).hide();
  }); //endof click

  $('a.nested_hide').click(function(e){
    var id = $(this).attr('id');
    $('div.children_' + id).hide();
    $('span.children_' + id).hide();
    $(this).siblings('a.nested_show').show();
    $(this).hide();
  }); //endof click
</script>