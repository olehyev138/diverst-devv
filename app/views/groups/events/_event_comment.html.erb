<div class="content__section">
  <div class="card">
    <div class="card__section">
      <p style="font-style: italic;"><%= comment.content %></p>
      <% if comment.user == current_user %>
      <p>You left this comment</p>
      <% else %>
      <p>   by <%= comment.user.name %>
        <% if comment.user.erg_leader? %>
          (Group Leader)
        <% end %>
      </p>
      <% end %>
      <% if policy(comment).erg_leader? %>
      <%= link_to "Approve", approve_comment_url(comment), method: :patch, class: "btn btn--primary" unless comment.approved? %>
      <%= link_to "Disapprove", disapprove_comment_url(comment), method: :patch, class: "btn btn--secondary" unless comment.disapproved? %>
      <%= link_to "Delete", comment_path(comment), method: :delete, data: { confirm: "Are you sure you want to delete this comment?" }, class: "btn btn--danger" %>
      <% end %>
    </div>
  </div>
</div>