<div class="content__header">
  <h1>
    <%= link_to "Events", group_events_path(@group) %> /
    <%= @event.title %>
  </h1>
  <%= link_to "Edit event", edit_group_event_path(@group, @event), class: "btn btn--primary" if is_admin? %>
</div>

<div class="content__main">
  <div class="card">
    <div class="card__section">
      <div style="background-image: url(<%= @event.picture.url %>); height: 300px; background-size: 100%; background-position: center; margin-bottom: 35px;"></div>
      <h4>Description</h4>
      <p><%= @event.description %></p>
      <h4>Date &amp; time</h4>
      <p><%= @event.time_string %></p>
      <h4>Location</h4>
      <p><%= @event.location %></p>
    </div>
  </div>
</div>