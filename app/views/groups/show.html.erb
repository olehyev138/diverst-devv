<div class="content__header">
  <h1><%= @group.name %></h1>
</div>

<p><%= @group.description %></p>

<ul>
  <li><%= link_to "Events", group_events_path(@group) %></li>
</ul>

<div class="content__main">

  <div class="row">
    <div class="col sm-12 md-6">
      <div class="card">
        <div class="card__section">
          <h4>Newest Members</h4>
          <ol>
            <% @group.members.limit(5).each do |member| %>
              <li><%= link_to member.name, member %></li>
            <% end %>
          </ol>
        </div>
      </div>
    </div>

    <div class="col sm-12 md-6">
      <div class="card">
        <div class="card__section">
          <h4>Latest Events</h4>
          <ol>
            <% @group.members.limit(5).each do |member| %>
              <li><%= link_to member.name, member %></li>
            <% end %>
          </ol>
        </div>
      </div>
    </div>
  </div>

</div>