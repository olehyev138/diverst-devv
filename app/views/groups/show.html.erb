<div class="content__header">
  <h1><%= @group.name %></h1>
</div>

<p><%= @group.description %></p>

<!-- <h2>Members</h2> -->

<div class="content__main">
  <div class="card">
    <% @group.members.each do |member| %>
      <div class="card__section card__section--border">
        <div class="flex-row">
          <div class="flex-row__cell"><%= link_to member.name, member %></div>
        </div>
      </div>
    <% end %>
  </div>
</div>