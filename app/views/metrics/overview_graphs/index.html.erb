<div class="content__main">
  <div class="card">
    <div class="card__section">
      <h1>At a glance</h1>
      <div class="flex-row">
        <div class="flex-row__cell">
          <big>Users</big><br>
          <strong><%= @general_metrics[:nb_users] %></strong>
        </div>
        <div class="flex-row__cell">
          <big><%= c_t(:erg).pluralize %></big><br>
          <strong><%= @general_metrics[:nb_ergs] %></strong>
        </div>
        <div class="flex-row__cell">
          <big><%= c_t(:segment).pluralize %></big><br>
          <strong><%= @general_metrics[:nb_segments] %></strong>
        </div>
        <div class="flex-row__cell">
          <big>Resources</big><br>
          <strong><%= @general_metrics[:nb_resources] %></strong>
        </div>
        <div class="flex-row__cell">
          <big>Surveys</big><br>
          <strong><%= @general_metrics[:nb_polls] %></strong>
        </div>
        <div class="flex-row__cell">
          <big>Ongoing campaigns</big><br>
          <strong><%= @general_metrics[:nb_ongoing_campaigns] %></strong>
        </div>
        <div class="flex-row__cell">
          <big>Average # of members per <%= c_t(:erg) %></big><br>
          <strong><%= @general_metrics[:average_nb_members_per_group] %></strong>
        </div>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card__section">
      <div class="card-title flex-row" style="margin-bottom: 10px;">
        <div class="flex-row__cell flex-row__cell--grow"><h1 style="display: inline-block;">Users</h1></div>
        <div class="flex-row__cell"><span><%= link_to('See more...', metrics_users_path) %></span></div>
      </div>

      <div class="row">
        <div class="col md-4 sm-12">
          <div class="panel panel--primary text-center">
            <div class="panel-headline"><p><strong>Total Active Users</strong></p></div>
            <div class="panel-data"><p><b class="accent"><%= @general_metrics[:nb_users] %></b></p></div>
          </div>
        </div>

        <div class="col md-4 sm-12">
          <div class="panel panel--primary text-center">
            <div class="panel-headline"><p><strong>User Growth (3 months)</strong></p></div>
            <div class="panel-data"><p><b class="accent">76%</b></p></div>
          </div>
        </div>

        <div class="col md-4 sm-12">
          <div class="panel panel--primary text-center">
            <div class="panel-headline"><p><strong><%= c_t(:erg).capitalize %> Memberships (6 months)</strong></p></div>
            <div class="panel-data"><p><b class="accent">132</b></p></div>
          </div>
        </div>
      </div>
      <br>

      <div class="panel">
        <div class="flex-row flex-row--middle">
          <div class="flex-row__cell flex-row__cell--grow">
            <h4>User Growth</h4>
            <%= render 'components/range_selector' %>
            <div class="card__action">
              <%= link_to "Export CSV", growth_of_employees_generic_graphs_path(format: :csv), class: "hidden-xs" %>
            </div>
            <div id="user_growth" class="graph" data-url="<%= user_growth_metrics_overview_path %>">
              <svg></svg>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card__section">
      <div class="card-title flex-row" style="margin-bottom: 10px;">
        <div class="flex-row__cell flex-row__cell--grow"><h1 style="display: inline-block;"><%= c_t(:erg).capitalize.pluralize %></h1></div>
        <div class="flex-row__cell"><span><%= link_to('See more...', metrics_groups_path) %></span></div>
      </div>

      <div class="row">
        <div class="col md-6 sm-12">
          <div class="panel panel--primary text-center">
            <div class="panel-headline"><p><strong>Total <%= c_t(:erg).capitalize.pluralize %></strong></p></div>
            <div class="panel-data"><p><b class="accent"><%= @general_metrics[:nb_ergs] %></b></p></div>
          </div>
        </div>

        <div class="col md-6 sm-12">
          <div class="panel panel--primary text-center">
            <div class="panel-headline"><p><strong>Average # of Members</strong></p></div>
            <div class="panel-data"><p><b class="accent"><%= @general_metrics[:average_nb_members_per_group] %></b></p></div>
          </div>
        </div>
      </div>
      <br>

      <div class="panel">
        <div class="flex-row flex-row--middle">
          <div class="flex-row__cell flex-row__cell--grow">
            <h4><%= c_t(:erg).capitalize %> Growth</h4>
            <div class="card__action">
              <a href="#" class="csv-export-link hidden-xs" data-url="<%= growth_of_groups_generic_graphs_path(format: :csv) %>">Export CSV</a>
            </div>
            <div id="growth_groups_graph" class="graph" data-url="<%= growth_of_groups_generic_graphs_path %>">
              <svg></svg>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
