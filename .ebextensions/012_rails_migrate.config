files:
  "/opt/elasticbeanstalk/support/conf/14_custom_rails_migrate.conf":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      description "Elastic Beanstalk Custom Rails Migration Script"

      set -xe

      EB_SCRIPT_DIR=$(/opt/elasticbeanstalk/bin/get-config container -k script_dir)
      EB_APP_STAGING_DIR=$(/opt/elasticbeanstalk/bin/get-config container -k app_staging_dir)
      EB_APP_USER=$(/opt/elasticbeanstalk/bin/get-config container -k app_user)
      EB_SUPPORT_DIR=$(/opt/elasticbeanstalk/bin/get-config container -k support_dir)

      . $EB_SUPPORT_DIR/envvars-wrapper.sh

      RAKE_TASK="db:migrate"

      . $EB_SCRIPT_DIR/use-app-ruby.sh

      cd $EB_APP_STAGING_DIR

      if su -s /bin/bash -c "bundle exec $EB_SCRIPT_DIR/check-for-rake-task.rb $RAKE_TASK" $EB_APP_USER; then
        su -s /bin/bash -c "leader_only bundle exec rake db:migrate" $EB_APP_USER || echo 'Could not run migrations'
      else
      	echo "No $RAKE_TASK task in Rakefile, skipping database migration."
      fi
